kubectl get pods --all-namespaces -o json | jq -c '.items[] | {name:.metadata.name, namespace: .metadata.namespace, hostIP: .status.hostIP, kind: .metadata | select ( has ("ownerReferences") ).ownerReferences[] | select (.kind != "Job").kind, status: .status | select ( has ("conditions") ).conditions[] | select ( .status == "False" ).status, lastTransitionTime: .status | select ( has ("conditions") ).conditions[] | select ( .status == "False" ).lastTransitionTime }'
